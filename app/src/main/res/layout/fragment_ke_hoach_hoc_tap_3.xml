<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    tools:context="com.nckh2016.vuduytung.nckh2016.KeHoachHocTap3Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/item_title" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/layoutTieuDe"
            android:background="#c0c0c0" />

        <ListView
            android:id="@+id/list_view_monhoc_nhapdiem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btnLuuMonHoc"
            android:layout_below="@+id/line" />

        <Button
            android:id="@+id/btnLuuMonHoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="20dp"
            android:text="@string/btn_luumonhoc"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</FrameLayout>
