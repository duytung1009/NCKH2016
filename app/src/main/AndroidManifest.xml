            android:name=".MonHocChuaQuaActivity"
            android:label="@string/title_activity_mon_hoc_chua_qua"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".KeHoachHocTapActivity"
            android:label="@string/title_activity_ke_hoach_hoc_tap"
            android:launchMode="singleTask"
            android:parentActivityName=".QuanLyKeHoachHocTapActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nckh2016.vuduytung.nckh2016.QuanLyKeHoachHocTapActivity" />
        </activity>
        <activity
