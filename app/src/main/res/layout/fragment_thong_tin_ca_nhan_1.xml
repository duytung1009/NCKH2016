<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fab_container_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ThongTinCaNhan1Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txtKhoa"
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/txtNganh"
                        android:padding="10dp"
                        android:textColor="@android:color/tertiary_text_dark" />

                    <TextView
                        android:id="@+id/txtNganh"
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:padding="10dp"
                        android:textColor="@android:color/tertiary_text_dark" />

                    <TextView
                        android:id="@+id/txtChuyenSau"
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtNganh"
                        android:padding="10dp"
                        android:textColor="@android:color/tertiary_text_dark" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <TextView
                        style="@style/normalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/txtNamThu"
                        android:layout_centerHorizontal="true"
                        android:text="@string/txtNam"
                        android:textColor="@android:color/tertiary_text_dark" />

                    <TextView
                        android:id="@+id/txtNamThu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="sans-serif-thin"
                        android:text="0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="112sp" />
                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/fab"
            android:scaleX="0"
            android:scaleY="0"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:adjustViewBounds="true"
            android:background="@drawable/fab"
            android:src="@drawable/edit"
            android:scaleType="fitCenter"
            android:padding="16dp"
            android:elevation="5dp"
            android:transitionName="button_fab" />

    </RelativeLayout>

</FrameLayout>
