                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nckh2016.vuduytung.nckh2016.MainActivity" />
        </activity>
        <activity
            android:name=".NganhActivity"
            android:label="@string/title_activity_nganh"
            android:launchMode="singleTask"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nckh2016.vuduytung.nckh2016.MainActivity" />
        </activity>

